@model LabProject.Models.Genre

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалити обраний жанр</h1>


<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GenreName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GenreName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="GenreId" />
        <input type="hidden" value="@ViewBag.MovieId" name="MovieId" />
         <input type="submit" value="Видалити" class="btn btn-danger" style="font-size:15px" />
        <button type="button" onclick="location.href='@Url.Action("AddedGenreList", new {movieId = Model.GenreId})'" class="btn btn-outline-info" style="font-size:15px">До списку жанрів</button>
    </form>
</div>

@model LabProject.Models.MovieCast

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалити</h1>

<h3>Ви впевнені, що хочете видалити людину з команди?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CastMember)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CastMember.CastMemberFullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.MovieName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Position.PositionName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MovieCastId" />
        <input type="submit" value="Видалити" class="btn btn-danger" style="font-size:15px" />
        <button type="button" onclick="location.href='@Url.Action("AddedMovieCastList", new {movieId = Model.MovieId})'" class="btn btn-outline-info" style="font-size:15px">До списку команди</button>
    </form>
</div>

@model LabProject.Models.Session

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалити</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SessionNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SessionNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SessionDateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SessionDateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status.StatusName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Hall)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hall.HallName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.MovieName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SessionId" />
        <input type="submit" value="Видалити" class="btn btn-danger" style="font-size:15px" /> 
        <button type="button" onclick="location.href=' @Url.Action("Details", "Halls", new { id = Model.HallId})'" class="btn btn-outline-info" style="font-size:15px">До списку сеансів</button>
    </form>
</div>
